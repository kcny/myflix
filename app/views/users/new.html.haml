%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, layout: :horizontal, label_col: 'col-2', control_col: 'col-6' do |f|
        %header
          %h1 Register
        %fieldset
          = f.email_field   :email, label: "Email Address"
          = f.password_field :password , lable: "Password"     
          = f.text_field :full_name, label: "Full Name"
          = hidden_field_tag :invitation_token, @invitation_token
        %fieldset.actions.control-group
          .controls
            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key=#{ENV['STRIPE_PUBLISHABLE']} data-image="/img/documentation/checkout/marketplace.png" data-name="My Flix" data-description="Only $9.99 for the best Video Services." data-amount="900"></script>
            