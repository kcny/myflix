%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for([:admin, @video], layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="/ui/admin_views_payments") Recent Payments
            %li.active
              = link_to "Add New Video", new_admin_video_path
          %br
          %fieldset
            = f.text_field :title, control_col: "span3"
            = f.select :category_id, options_for_select(Category.all.map {|category| [category.name, category.id]})
            = f.text_area :description, rows: 8
            = f.file_field :large_cover
            = f.file_field :small_cover
            = f.text_field :video_url, label: "Video URL"
            
          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              = f.submit "Add Video"
